/* pages/bargainList/bargainList.wxss */
page{
  background: #f5f6f7;
}
.tab-list{
  /* position: fixed;
  width: 100%;
  top: 0;
  left: 0; */
  background: #fff;
}
.height27{
  height: 27px;
}
.order-list .item{
  background: #fff;
  padding: 20px;
}
.order-list .item-top .image-wrap{
  width: 100px;
  height: 100px;
}
.order-list .item-top .image-wrap image{
  width: 100%;
  height: 100%;
  display: block;
}
.order-list .item-top .info{
  margin-left: 10px;
  border-bottom: 1px solid #f5f6f7;
}
.order-list .item-top .title{
  font-size: 16px;
  line-height: 22px;
}
.order-list .item-top .time{
  font-size: 12px;
  color: #999;
  margin: 10px 0 20px;
}
.order-list .item-top .num{
  font-size: 12px;
  color: #999;
}
.order-list .item-top .price{
  font-size: 12px;
  color: #999;
}
.order-list .item-top .price text{
  font-size: 15px;
}
.order-list .item-bottom{
  flex-direction: row-reverse;
  margin-top: 10px;
}
.order-list .item-bottom .button{
  width: 70px;
  height: 30px;
  line-height: 30px;
  color: #fff;
  text-align: center;
  border-radius: 4px;
  margin-right: 10px;
  font-size: 13px;
}
.order-list .item-bottom .button:first-child{
  margin-right: 0;
}