/* pages/orderSellExchange/orderSellExchange.wxss */
page{
  background: #FCD5A6
}
.container{
  padding: 20px;
}
.wrap,.bottom{
  padding: 20px;
  background: #fff;
  border-radius: 5px;
}
.bottom{
  padding: 30px 20px;
}
.wrap .img-wrap{
  width: 100px;
  height: 100px;
  margin-right: 10px;
}
.wrap .info .title{
  font-size: 16px;
  line-height: 22px;
  color: #353535;
}
.wrap .info .num{
  font-size: 12px;
  margin: 10px 0 20px;
  color: #999;
}
.wrap .info .address{
  font-size: 12px;
  color: #999;
}
.wrap .info .price{
  font-size: 16px;
}
.wrap .img-wrap image{
  width: 100%;
  height: 100%;
  display: block;
}
.bottom .item{
  text-align: center;
  margin-bottom: 20px;
}
.bottom .item image{
  width: 150px;
  height: 150px;
  display: block;
  margin:0 auto;
}
.bottom .item .text{
  font-size: 14px;
  color: #999;
}
.shop-info{
 
  background: #fff;
}
.shop-info  .shop-address{
  color: #999;
  font-size: 12px;
}
.shop-info .shop-name{
  font-size: 14px;
  color: #353535;
  margin-bottom: 5px;

}
.shop-info .shop-info-r{
  width: 20px;
  
}
.shop-info .shop-info-r image{
  width: 30px;
  height: 30px;
  display: block;
  transform: rotate(235deg)
}