/* components/sku/sku.wxss */
@import "../../app.wxss";
.bottom-options{
  height: 49px;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  background: #fff;
  z-index: 9;
}
.bottom-options .item{
  
  overflow: hidden;
  box-sizing: border-box;
  text-align: center;
  padding-top: 5px;
  position: relative
}
.bottom-options .item:first-child{
  margin: 0 25px;
}
.bottom-options .item:nth-child(2){
  margin-right: 25px;
}
.bottom-options .item .contact{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0;
  z-index: 2;
}
.bottom-options .item .image{
  width: 25px;
  height: 25px;
  display: block;
  margin: 0 auto;
}
.bottom-options .item .text{
  font-size: 12px;
  color: #666;
  display: block;
  margin-top: 0;
}
.bottom-options .goshop{
  font-size: 18px;
  line-height: 49px;
  text-align: center;
  flex:1;
  overflow: hidden;
  color: #fff;
}
.bottom-options .goshop.disabled{
  background: #ccc;
  color: #fff;
}
.sku-wrap{
  height: 500px;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index: 103;
  border-top-right-radius: 16px;
  border-top-left-radius: 16px;
}
.sku-inner-wrap{
  padding:30px 20px 0 20px;
}
.sku-inner-wrap .image-wrap{
  width: 120px;
  height: 120px;
  margin-right: 15px;
}
.sku-inner-wrap .image-wrap ._image{
  width: 100%;
  height: 100%;
  display: block;
}
.sku-inner-wrap .info{
  position: relative;
}
.sku-inner-wrap .info .price-wrap{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}
.sku-inner-wrap .info .price{
  color: #e51c23;
  font-size: 19px;
}
.stock-wrap{
  width: 100%;
}
.sku-inner-wrap .info .stock{
  color: #999;
  font-size: 12px;
}
.gonow{
  position: absolute;
  width: 90%;
  right: 0;
  left: 0;
  bottom: 68rpx;
  margin: auto;
  color: #fff;
  text-align: center;
  height: 49px;
  line-height: 49px;
  border-radius: 10rpx;
  font-size: 40rpx;
}
.close2{
  position: absolute;
  right: 20px;
  top: 20px;
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10
}
.close2 .close_img{
  width: 20px;
  height: 20px;
}
.sku-num-wrap{
  padding:  0 20px;
}
.sku-num-wrap .icon{
  width: 15px;
  height: 15px;
  display: block;
}
.sku-num-wrap .num{
  padding: 0 10px;
  background: #f5f6f7;
  font-size: 14px;
  margin:0 10px;
}
.sku-num-wrap .icon.add{
  width: 12px;
  height: 12px;
}
.sku-num-wrap .icon.disabled{
  opacity: 0.1
}
.num-header{
  font-size: 14px;
  color: #000;
}
.halfline{
  margin:  15px auto;
  display: block;
}