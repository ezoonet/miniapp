/* components/empower/empower.wxss */
.empower{
  text-align: center;
}
.empower .image{
  width: 50px;
  height: 50px;
  display: block;
  margin: 0 auto;
}
.empower .title1{
  font-size: 18px;
  font-weight: bold;
  color: #000;
}
.empower .line{
  width: 300px;
  height: 1px;
  background: #f0f1f2;
  transform: scaleY(0.5);
  margin: 10px auto;
}
.empower .title2{
  font-size: 15px;
  color: #000;
  margin-bottom: 5px;
}
.empower .title3{
  font-size: 13px;
  color: #999;
}
.empower .button{
  height: 35px;
  width: 130px;
  background-image: linear-gradient(-30deg, 
		#59c16c 0%, 
		#66dd7a 100%), 
	linear-gradient(
		#2db55a, 
		#2db55a);
	background-blend-mode: normal, 
		normal;
	border-radius: 4px;
  color: #fff;
  margin: 15px auto 0;
  line-height: 35px;
  font-size: 16px;
  border: none;
}